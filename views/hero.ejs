<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('includes/head') %> 
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/hero.css" />
    <script src="/js/hero_presentation.js" defer></script>
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.5/dist/umd/popper.min.js"
      integrity="sha384-Xe+8cL9oJa6tN/veChSP7q+mnSPaj5Bcu9mPX5F5xIGE0DVittaqT5lorf0EI7Vk"
      crossorigin="anonymous"
      defer
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2"
      crossorigin="anonymous"
      defer
    ></script>
  </head>
  <body>
    <%- include('includes/navigation-header') %>
    <main id="hero-main">
      <section id="hero-info">
        <section id="hero-info__main">
          <ul id="hero-name">
            <li><%= angelina.name %></li>
            <li><img src="/images/icons/<%= angelina.rarity %>.png" /></li>
          </ul>
          <h3>Voice Actor: <%= angelina.voiceActor %></h3>
          <ul id="hero-faction-list">
            <% for (const faction of angelina.factions) { %>
            <li>
              <img
                src="/images/factions/<%= factions.find(f => f.name === faction).imageName %>"
              />
            </li>
            <% } %>
          </ul>
          <ul id="hero-bio-list">
            <h3>Hero Info</h3>
            <% for (const info in angelina.bio) { %>
            <li><%= info %>: <%= angelina.bio[info] %></li>
            <% } %>
          </ul>
          <div id="carouselHeroSkins" class="carousel slide carousel-dark" data-bs-ride="true">
            <div class="carousel-indicators">
              <% for (let i = 0; i < angelina.skinsNames.length; i++) { %> 
                <button type="button" data-bs-target="#carouselHeroSkins" data-bs-slide-to="<%= i %>" aria-label="Slide <%= i + 1 %>"
                  <% if (i === 0) { %> class="active" aria-current="true" <% } %>  ></button>
              <% } %> 
            </div>
            <div class="carousel-inner">
              <% angelina.skinsNames.forEach((skinName, id) => { %> 
              <div class="carousel-item <% if (id === 0) { %> active <% } %>">
                <img
                  src="/images/heroes_skins/<%= skinName %> "
                  class="d-block w-100"/>
              </div>
              <% }) %> 
            </div>
          </div>
        </section>
        <section id="hero-info__talent">
          <% const skill = skills.find(s => s.name === angelina.threePointSkill) %> 
          <% const equipment = equipments.find(e => e.name === angelina.exlEquipment) %> 
          <ul id="hero-talent">
            <li><img src="/images/heroes_talents/<%= angelina.talent.imageName %> "></li>
            <li>
              <h3>Talent: <%= angelina.talent.name %> </h3>
              <p><%= angelina.talent.description %> </p>
            </li>
          </ul>
          <ul id="hero-three_point-skill">
            <li><img src="/images/skills/<%= skill.imageName %> "></li>
            <li>
              <h3>Awakening skill: <%= skill.name %> </h3>
              <p>Cost: <%= skill.cost %>  | Cd: <%= skill.cd %>  | Range: <%= skill.range %>  | Span: <%= skill.span %> </p>
              <p><%= skill.description %> </p>
            </li>
          </ul>
          <ul id="hero-exclusive-equipment">
            <li><img src="/images/eq_exclusives/<%= equipment.imageName %> "></li>
            <li>
              <h3>Awakening skill: <%= equipment.name %> </h3>
              <p>Type: <%= equipment.type %> </p>
              <p><%= equipment.description %> </p>
            </li>
          </ul>
          <h3>Max Stats</h3>
          <% angelina.maxStats.forEach(heroStats => { %> 
          <ul id="hero-stats">
          <% for (const stat in heroStats) { %> 
            <li>
              <% if (stat === 'className') { %> 
                <p><strong><%= heroStats[stat] %> </strong></p>
              <% } else { %> 
                <img src="/images/icons/<%= stat %>.png"/>
                <p><%= heroStats[stat] %> </p>
              <% } %> 
            </li>
          <% } %> 
          </ul>
          <% }) %> 
          <h3>Soldier Bonus</h3>
          <ul id="hero-soldier-bonus">
          <% for (const soldierStat in angelina.soldierBonus) { %> 
            <li>
              <img src="/images/icons/<%= soldierStat %>.png"/>
              <p><%= angelina.soldierBonus[soldierStat] %> </p>
            </li>
          <% } %> 
          </ul>
        </section>
      </section>
      <section id="hero-bonds">
        <section id="hero-bonds__requirements">
          <h3>Bonds Requirements</h3>
          <ul id="hero-bond-requirement">
            <% for (const requirement in angelina.bondRequirement) { %> 
              <li>
                <p><strong><%= requirement %> </strong>: <%= angelina.bondRequirement[requirement] %> </p>
              </li>
            <% } %> 
          </ul>
        </section>
        <section id="hero-bonds__related">
          <h3>Related Bonds</h3>
          <ul id="hero-related-bonds">
            <% for (const relation in angelina.relatedBonds) { %> 
              <li>
                <p><strong><%= relation %> </strong>: <%= angelina.relatedBonds[relation] %> </p>
              </li>
            <% } %> 
          </ul>
        </section>
      </section>
      <section id="hero-classes">
        <h3>Classes and Soldiers</h3>
        <ul id="hero-classes-list">
          <% angelina.classes.forEach(heroClass => { %> 
            <li>
              <h3>
                <img src="/images/heroes_classes/<%= classes.find(c => c.name === heroClass.name).imageName %>" />
                <p><%= heroClass.name %> </p>
              </h3>
              <% for (const skill of heroClass.skills) { %> 
                <% const heroSkill = skills.find(s => s.name === skill); %>
              <ul>
                <li>
                  <img src="/images/skills/<%= heroSkill.imageName %> " />
                </li>
                <li>
                  <h5><strong><%= heroSkill.name %></strong></h5>
                  <p>Cost: <%= heroSkill.cost %>  | Cd: <%= heroSkill.cd %>  | Range: <%= heroSkill.range %>  | Span: <%= heroSkill.span %> </p>
                  <p><%= heroSkill.description %> </p>
                </li>
              </ul>
              <% } %>
              <ul>
                <% for (const soldier of heroClass.soldiers) { %>
                  <% const heroSoldier = soldiers.find(s => s.name === soldier) %>
                  <img src="/images/soldiers_cards/<%= heroSoldier.cardName %> " />
                <% } %> 
              </ul> 
            </li>
            <% }) %>
            <h3>Training Ground Soldiers</h3>
            <ul>
              <% for (const soldier of angelina.trainingGroundSoldiers) { %> 
              <li>
                <img src="/images/soldiers_cards/<%= soldiers.find(s => s.name === soldier).cardName %> ">
              </li>
              <% } %> 
            </ul>
        </ul>
      </section>
    </main>
    <%- include('includes/footer') %>
  </body>
</html>
